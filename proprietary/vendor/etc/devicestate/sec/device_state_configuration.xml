<device-state-config>
  <!-- CLOSE configuration -->
  <device-state>
    <identifier>0</identifier>
    <name>CLOSE</name>
    <conditions>
      <lid-switch>
        <open>FALSE</open>
      </lid-switch>
      <sensor>
        <type>com.samsung.sensor.folding_state</type>
        <name>lid_angle_fusion  Wakeup</name>
        <value>
          <max-inclusive>0.9</max-inclusive>
        </value>
      </sensor>
    </conditions>
    <flags>
      <flag>FLAG_APP_INACCESSIBLE</flag>
    </flags>
  </device-state>

  <!-- TENT configuration -->
  <device-state>
    <identifier>1</identifier>
    <name>TENT</name>
    <conditions>
      <lid-switch>
        <open>TRUE</open>
      </lid-switch>
      <sensor>
        <type>com.samsung.sensor.folding_state</type>
        <name>lid_angle_fusion  Wakeup</name>
        <value>
          <min-inclusive>1</min-inclusive>
          <max-inclusive>1.9</max-inclusive>
        </value>
      </sensor>
    </conditions>
    <flags>
      <flag>FLAG_APP_INACCESSIBLE</flag>
    </flags>
  </device-state>

  <!-- HALF_FOLD configuration -->
  <device-state>
    <identifier>2</identifier>
    <name>HALF_FOLDED</name>
    <conditions>
      <sensor>
        <type>com.samsung.sensor.folding_state</type>
        <name>lid_angle_fusion  Wakeup</name>
        <value>
          <min-inclusive>2</min-inclusive>
          <max-inclusive>2.9</max-inclusive>
        </value>
      </sensor>
    </conditions>
  </device-state>

  <!-- OPEN configuration -->
  <device-state>
    <identifier>3</identifier>
    <name>OPEN</name>
    <conditions>
      <sensor>
        <type>com.samsung.sensor.folding_state</type>
        <name>lid_angle_fusion  Wakeup</name>
        <value>
          <min-inclusive>3</min-inclusive>
        </value>
      </sensor>
    </conditions>
  </device-state>
</device-state-config>

